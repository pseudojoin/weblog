<h1>ElasticSearch for Articles</h1>

<%= form_for :search_articles, url: search_articles_path, method: :get do |form| %>
  <%= form.text_field :query, value: params[:search_articles].presence && params[:search_articles][:query] %>
  <%= form.submit 'Search by Elastico' %>
<% end %>

<% unless @articles.nil? %>
  <% if @articles.empty? %>
    <h2>No articles found matching your query.</h2>
  <% else %>

    <table style="width: 100%;">
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3">Actions</th>
      </tr>

      <% @articles.each do |article| %>
          <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= link_to 'Destroy', article_path(article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </table>
  <% end %>
<% end %>

<p>
  <%= link_to 'Back', articles_path %>
</p>