<h1>ElasticSearch for Articles</h1>

<%= form_with(url: search_articles_path, html: {id: "articles_search_form"}, method: :get, remote: true) do |form| %>
  <%= form.text_field (:query) %>
  <%= form.submit 'Search by Elastico' %>
<% end %>

<%= render "search_result", layout: false %>

<p>
  <%= link_to 'Back', articles_path %>
</p>